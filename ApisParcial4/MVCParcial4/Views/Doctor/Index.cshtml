@model IEnumerable<ApisParcial4.Models.Doctor>

@{
    ViewBag.Title = "Doctores";
}

<h2>Lista de doctores</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdDoctor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreDoctor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EspecialidadDoctor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdDoctor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreDoctor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EspecialidadDoctor)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.IdDoctor }) |
            @*@Html.ActionLink("Details", "Details", new { id = item.IdDoctor }) |*@
            @Html.ActionLink("Delete", "Delete", new { id = item.IdDoctor })
        </td>
    </tr>
}

</table>
